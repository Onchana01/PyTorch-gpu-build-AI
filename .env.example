# Environment Configuration Example
# Copy this file to .env and update with your settings

# General
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=rocm_cicd
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# Redis
REDIS_URL=redis://localhost:6379/0

# GitHub Integration
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=

# Discord/Slack Notifications
DISCORD_WEBHOOK_URL=
DISCORD_BOT_TOKEN=

# Email
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=cicd@example.com
EMAIL_USE_TLS=true

# Security
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RATE_LIMIT_PER_MINUTE=100

# Kubernetes
KUBERNETES_NAMESPACE=rocm-cicd
KUBERNETES_SERVICE_ACCOUNT=rocm-cicd-sa

# ROCm Configuration
ROCM_DEFAULT_VERSION=6.0
GPU_ARCHITECTURES=["gfx906","gfx908","gfx90a","gfx1030"]

# Docker
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_PREFIX=rocm-pytorch-cicd

# Build Configuration
BUILD_TIMEOUT_SECONDS=7200
TEST_TIMEOUT_SECONDS=1800
MAX_CONCURRENT_BUILDS=10
MAX_RETRY_ATTEMPTS=3

# Artifact Storage
ARTIFACT_STORAGE_TYPE=local
ARTIFACT_STORAGE_PATH=./artifacts
ARTIFACT_RETENTION_DAYS=90

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
